            padding: 20px;
            border-radius: 10px;
            margin: 15px 0;
            overflow-x: auto;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
            position: relative;
        }

        .code-block code {
            display: block;
            white-space: pre;
        }

        .endpoint {
            background: #f3f4f6;
            padding: 15px;
            border-radius: 8px;
            margin: 10px 0;
            border-left: 4px solid #667eea;
        }

        .endpoint .method {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 4px 12px;
